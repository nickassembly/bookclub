@page "/books"
@using Bookclub.Views.Components
@using Bookclub.Models.Books

@inject HttpClient Http

<div class="container">
    <h3 class="p-3 text-center">Current Books</h3>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Isbn</th>
                <th>Author</th>
                <th>Title</th>
                <th>List Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in BookList)
            {
            <tr>
                <td>@book.Isbn</td>
                <td>@book.Author</td>
                <td>@book.Title</td>
                <td>@book.Subtitle</td>
                <td>@book.ListPrice</td>
            </tr>
            }
        </tbody>
    </table>

    <h3 class="p-3">Add Book</h3>
    <AddBookComponent />
</div>



