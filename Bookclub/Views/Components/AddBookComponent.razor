@using Bookclub.Models.Books.BookViews;
@using Bookclub.Views.Components.ContainerComponents;
@using Bookclub.Models.Colors;

<ContainerComponent State="State">
    <Content>
        <div>
            @*<TextBoxBase @ref="IdTextBox"
                     @bind-Value="BookView.Id"
                     Placeholder="Id" />
        <br />*@
            <TextBoxBase @ref="IsbnTextBox"
                         @bind-Value="BookView.Isbn"
                         Placeholder="Isbn" />
            <br />
            <TextBoxBase @ref="Isbn13TextBox"
                         @bind-Value="BookView.Isbn13"
                         Placeholder="Isbn13" />
            <br />
            <TextBoxBase @ref="AuthorTextBox"
                         @bind-Value="BookView.PrimaryAuthor"
                         Placeholder="Author" />
            <br />
            <TextBoxBase @ref="TitleTextBox"
                         @bind-Value="BookView.Title"
                         Placeholder="Title" />
            <br />
            @*<TextBoxBase @ref="SubtitleTextBox"
                     @bind-Value="BookView.Subtitle"
                     Placeholder="Subtitle" />
        <br />*@
            <DropDownBase @ref=MediaTypeDropDown
                          @bind-Value="BookView.MediaType"
                          TEnum="BookViewMediaType" />
            <br />
            <DatePickerBase @ref="PublishDatePicker"
                            @bind-Value="BookView.PublishedDate" />

            <br />
            <ButtonBase @ref=SubmitButton
                        Label="Submit Book"
                        OnClick="@AddBookAsync" />
            <br />
            <LabelBase @ref=StatusLabel />

        </div>
    </Content>
</ContainerComponent>